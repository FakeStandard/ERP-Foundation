    <!--Add Dialog-->
    <div class="modal fade" id="AddUserModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">建立人員資料作業</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">人員名稱</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" v-model="addForm.name" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">英文名稱</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" v-model="addForm.englishName" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">帳號</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" v-model="addForm.account"/>
                            <label style="color:red;">密碼預設為 1234</label>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">部門</label>
                        <div class="col-sm-9 form-inline">
                            <select class="form-select" v-model="addForm.department" v-on:change="departmentAddChange($event)">
                                <option v-for="item in departmentItem" :value="item.key">{{item.value}}</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9 form-inline">
                            <select class="form-select" v-model="addForm.unit">
                                <option v-for="item in unitItem" :value="item.key">{{item.value}}</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">職稱</label>
                        <div class="col-sm-9">
                            <select class="form-select" v-model="addForm.position">
                                <option v-for="item in positionItem" :value="item.id">{{item.name}}</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">聯絡方式</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" v-model="addForm.tel" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">通訊地址</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" v-model="addForm.address" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">聯絡人</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" v-model="addForm.contactPerson" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">聯絡人電話</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" v-model="addForm.contactTel" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">狀態</label>
                        <div class="col-sm-9">
                            <select class="form-select" v-model="addForm.status">
                                <option v-for="item in statusItem" :value="item.id">{{item.name}}</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" @@click="addData">
                        <i class="bi bi-save"></i>&nbsp;新增
                    </button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x"></i>&nbsp;取消
                    </button>
                </div>
            </div>
        </div>
    </div>

