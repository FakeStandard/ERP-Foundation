
<div id="titleApp" class="pt-3">
    <div class="container-fluid">
        <div class="card shadow px-4 py-4">
            <div class="row justify-content-between">
                <div class="col">
                    <button class="btn btn-outline-primary shadow" @@click="showAddDialogClick">
                        <i class="bi bi-plus-lg"></i>&nbsp;建立新職位
                    </button>
                </div>
                <div class="d-flex col-lg-4 col-md-6 col-sm-8 col-xs-12">
                    <input class="form-control me-2 shadow" type="search" placeholder="Search" aria-label="Search" v-model="searchText" @@keyup.enter="searchClick">
                    <button class="btn btn-outline-secondary shadow" @@click="searchClick">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>
            <div>
                <p class="pt-2">
                    <button class="btn btn-outline-dark btn-sm" v-show="!NAME" @@click="NAME=!NAME">
                        職位名稱
                    </button>
                    <button class="btn btn-outline-dark btn-sm" v-show="!DEPARTMENTNAME" @@click="DEPARTMENTNAME=!DEPARTMENTNAME">
                        部門
                    </button>
                    <button class="btn btn-outline-dark btn-sm" v-show="!UNITNAME" @@click="UNITNAME=!UNITNAME">
                        隸屬單位
                    </button>
                </p>
            </div>
            <div class="pt-2">
                <table class="table table-hover table-bordered">
                    <thead class="table-secondary">
                        <tr>
                            <th>#</th>
                            <th v-show="NAME">
                                職位名稱
                                @*<a href="#?" class="link-secondary" @@click="filterSort('NAME')" v-show="sortNAME==null">
                                        <i class="fa fa-sort"></i>
                                    </a>
                                    <a href="#?" class="link-secondary" @@click="filterSort('NAME')" v-show="sortNAME==false">
                                        <i class="bi bi-sort-down-alt"></i>
                                    </a>
                                    <a href="#?" class="link-secondary" @@click="filterSort('NAME')" v-show="sortNAME==true">
                                        <i class="bi bi-sort-down"></i>
                                    </a>*@
                                <a href="#?" class="link-secondary float-end" v-on:click="NAME=!NAME">
                                    <i class="bi bi-x"></i>
                                </a>
                            </th>
                            <th v-show="DEPARTMENTNAME">
                                部門
                                @*<a href="#?" class="link-secondary" @@click="filterSort('NAME')" v-show="sortNAME==null">
                                        <i class="fa fa-sort"></i>
                                    </a>
                                    <a href="#?" class="link-secondary" @@click="filterSort('NAME')" v-show="sortNAME==false">
                                        <i class="bi bi-sort-down-alt"></i>
                                    </a>
                                    <a href="#?" class="link-secondary" @@click="filterSort('NAME')" v-show="sortNAME==true">
                                        <i class="bi bi-sort-down"></i>
                                    </a>*@
                                <a href="#?" class="link-secondary float-end" v-on:click="DEPARTMENTNAME=!DEPARTMENTNAME">
                                    <i class="bi bi-x"></i>
                                </a>
                            </th>
                            <th v-show="UNITNAME">
                                隸屬單位
                                @*<a href="#?" class="link-secondary" @@click="filterSort('NAME')" v-show="sortNAME==null">
                                        <i class="fa fa-sort"></i>
                                    </a>
                                    <a href="#?" class="link-secondary" @@click="filterSort('NAME')" v-show="sortNAME==false">
                                        <i class="bi bi-sort-down-alt"></i>
                                    </a>
                                    <a href="#?" class="link-secondary" @@click="filterSort('NAME')" v-show="sortNAME==true">
                                        <i class="bi bi-sort-down"></i>
                                    </a>*@
                                <a href="#?" class="link-secondary float-end" v-on:click="UNITNAME=!UNITNAME">
                                    <i class="bi bi-x"></i>
                                </a>
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr v-for="(item, index) in list">
                            <td>{{index+1}}</td>
                            <td v-show="NAME">{{ item.name }}</td>
                            <td v-show="DEPARTMENTNAME">{{ item.departmentName }}</td>
                            <td v-show="UNITNAME">{{ item.unitName }}</td>
                            <td style="max-width:100px;text-align:center">
                                <button class="btn btn-outline-success" data-bs-toggle="tooltip" data-bs-placement="bottom" title="編輯" @@click="showEditDialogClick(item)">
                                    <i class="bi bi-pencil-square"></i>
                                </button>
                                <button class="btn btn-outline-danger" data-bs-toggle="tooltip" data-bs-placement="bottom" title="刪除" @@click="deleteDataClick(item.id)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                    <tbody v-show="loading">
                        <tr>
                            <td colspan="4" style="text-align:center">
                                <div class="d-flex justify-content-center">
                                    <div class="spinner-border spinner-border-sm text-info" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                    <tbody v-show="!loading && list.length==0">
                        <tr>
                            <td colspan="4" style="text-align:center">目前尚無資料</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!--Add Dialog-->
    <div class="modal fade" id="AddTitleModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">建立職位資料作業</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">職位名稱</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" v-model="addForm.name" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">部門</label>
                        <div class="col-sm-9">
                            <select class="form-select" v-model="addForm.departmentID" v-on:change="departmentAddChange($event)">
                                <option v-for="item in departmentItem" :value="item.key">{{item.value}}</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">隸屬單位</label>
                        <div class="col-sm-9">
                            <select class="form-select" v-model="addForm.unitID">
                                <option v-for="item in unitItem" :value="item.key">{{item.value}}</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" @@click="addData">
                        <i class="bi bi-save"></i>&nbsp;新增
                    </button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x"></i>&nbsp;取消
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!--Edit Dialog-->
    <div class="modal fade" id="EditTitleModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">修改職位資料作業</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">職位名稱</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" v-model="editForm.name" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">部門</label>
                        <div class="col-sm-9">
                            <select class="form-select" v-model="editForm.departmentID" v-on:change="departmentEditChange($event)">
                                <option v-for="item in departmentItem" :value="item.key">{{item.value}}</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">隸屬單位</label>
                        <div class="col-sm-9">
                            <select class="form-select" v-model="editForm.unitID">
                                <option v-for="item in unitItem" :value="item.key">{{item.value}}</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" @@click="editData">
                        <i class="bi bi-save"></i>&nbsp;儲存
                    </button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x"></i>&nbsp;取消
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>